{
  "compilerOptions": {
    "outDir": "./dist/ts",
    "module": "es6",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": ".",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "scripts",
    "webpack.*",
    "./dist/**/*"
  ],
}
